{
  "name": "geometric-langlands-wasm",
  "version": "0.1.0",
  "description": "WebAssembly bindings for the Geometric Langlands Conjecture framework",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg --release",
    "build-debug": "wasm-pack build --target web --out-dir pkg --dev",
    "build-node": "wasm-pack build --target nodejs --out-dir pkg-node --release",
    "build-bundler": "wasm-pack build --target bundler --out-dir pkg-bundler --release",
    "build-all": "npm run build && npm run build-node && npm run build-bundler",
    "optimize": "wee_alloc-pack-size --target release",
    "serve": "python3 -m http.server 8000",
    "test": "wasm-pack test --headless --firefox",
    "test-node": "wasm-pack test --node",
    "size-check": "ls -lah pkg/geometric_langlands_wasm_bg.wasm",
    "publish": "cd pkg && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet/ruv-FANN.git",
    "directory": "wasm"
  },
  "keywords": [
    "webassembly",
    "wasm",
    "mathematics",
    "langlands",
    "conjecture",
    "number-theory",
    "algebraic-geometry",
    "rust"
  ],
  "author": "ruv-FANN Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ruvnet/ruv-FANN/issues"
  },
  "homepage": "https://github.com/ruvnet/ruv-FANN#readme",
  "devDependencies": {
    "wasm-pack": "^0.13.0"
  },
  "files": [
    "pkg/",
    "src/",
    "Cargo.toml",
    "README.md"
  ]
}