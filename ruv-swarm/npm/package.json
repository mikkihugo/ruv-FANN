{
  "name": "ruv-swarm",
  "version": "1.0.16",
  "description": "High-performance neural network swarm orchestration in WebAssembly",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "type": "module",
  "bin": {
    "ruv-swarm": "bin/ruv-swarm-secure.js",
    "ruv-swarm-legacy": "bin/ruv-swarm-clean.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "bin/",
    "src/",
    "wasm/",
    "README.md"
  ],
  "scripts": {
    "start": "node bin/ruv-swarm-clean.js",
    "mcp": "node bin/ruv-swarm-clean.js mcp start",
    "test": "node test/test-runner.js",
    "test:mcp": "node test/mcp-server-reliability-test.js",
    "test:docker": "docker run --rm -it ruv-swarm npm test",
    "build": "npm run build:wasm && npm run build:types",
    "build:wasm": "echo 'WASM build handled by Rust workspace'",
    "build:types": "echo 'TypeScript definitions generated'",
    "postinstall": "node -e \"console.log('ruv-swarm v1.0.16 installed - SECURE VERSION: Features enhanced security controls')\"",
    "lint": "echo 'Linting handled by main workspace'",
    "prepare": "npm run build"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "ws": "^8.14.2"
  },
  "optionalDependencies": {
    "better-sqlite3": "^8.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/ws": "^8.5.8"
  },
  "keywords": [
    "ai",
    "swarm",
    "neural",
    "webassembly",
    "mcp",
    "claude",
    "agents",
    "coordination"
  ],
  "author": "rUv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet/ruv-FANN.git",
    "directory": "ruv-swarm/npm"
  },
  "bugs": {
    "url": "https://github.com/ruvnet/ruv-FANN/issues"
  },
  "homepage": "https://github.com/ruvnet/ruv-FANN/tree/main/ruv-swarm",
  "engines": {
    "node": ">=16.0.0"
  },
  "mcp": {
    "server": {
      "name": "ruv-swarm",
      "version": "1.0.16",
      "description": "High-performance swarm coordination MCP server",
      "command": "npx",
      "args": [
        "ruv-swarm",
        "mcp",
        "start"
      ],
      "env": {
        "MCP_MODE": "stdio"
      }
    },
    "tools": [
      "swarm_init",
      "swarm_status",
      "swarm_monitor",
      "agent_spawn",
      "agent_list",
      "agent_metrics",
      "task_orchestrate",
      "task_status",
      "task_results",
      "memory_usage",
      "neural_status",
      "neural_train"
    ]
  }
}
