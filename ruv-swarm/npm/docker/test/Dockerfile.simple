# Simple Dockerfile for quick testing
FROM node:22-alpine

# Install basic dependencies
RUN apk add --no-cache \
    bash \
    curl \
    git \
    make

# Set working directory
WORKDIR /app

# Copy package files first (for better caching)
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy the rest of the application
COPY . .

# Copy test runner
COPY docker/test/run-tests-simple.sh ./
RUN chmod +x ./run-tests-simple.sh

# Set environment
ENV NODE_ENV=test
ENV NO_COLOR=1

# Run tests
CMD ["./run-tests-simple.sh"]