# Dockerfile for MCP server
FROM rust:1.75-bookworm AS builder

# Install dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy the entire project
COPY ../../../.. .

# Build MCP server
WORKDIR /app/ruv-swarm/crates/ruv-swarm-mcp
RUN cargo build --release --bin ruv-swarm-mcp-stdio

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy built binary
COPY --from=builder /app/ruv-swarm/crates/ruv-swarm-mcp/target/release/ruv-swarm-mcp-stdio /usr/local/bin/

# Create non-root user
RUN useradd -m -s /bin/bash mcp

# Switch to non-root user
USER mcp

# Expose port
EXPOSE 3000

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Run MCP server
CMD ["ruv-swarm-mcp-stdio"]